{
    "$schema": "https://www.krakend.io/schema/v3.json",
    "version": 3,
    "name": "PubbyDev",
    "extra_config": {
      "security/cors": {
        "allow_origins": [
          "*"
        ],
        "expose_headers": [
          "Content-Length"
        ],
        "max_age": "12h",
        "allow_methods": [
          "GET",
          "POST",
          "PUT",
          "DELETE"
        ]
      }
    },
    "timeout": "3000ms",
    "cache_ttl": "300s",
    "output_encoding": "json",
    "port": 8080,
    "endpoints": [
      {
        "endpoint": "/api/v1/events",
        "method": "GET",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/events",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "host": [
              "http://localhost:30036"
            ],
            "disable_host_sanitize": false,
            "is_collection": true,
            "target": ""
          }
        ]
      },
      {
        "endpoint": "/api/v1/events/paginated",
        "input_query_strings": ["limit", "offset"],
        "method": "GET",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/events/paginated",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "host": [
              "http://localhost:30036"
            ],
            "disable_host_sanitize": false,
            "is_collection": true,
            "target": ""
          }
        ]
      },
      {
        "endpoint": "/api/v1/events/{eventId}/details",
        "method": "GET",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/events/{eventId}/details",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "host": [
              "http://localhost:30036"
            ],
            "disable_host_sanitize": false,
            "is_collection": true,
            "target": ""
          }
        ]
      },
      {
        "endpoint": "/api/v1/events/organizer/{organizerId}",
        "method": "GET",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/events/organizer/{organizerId}",
            "encoding": "json",
            "sd": "static",
            "method": "GET",
            "host": [
              "http://localhost:30036"
            ],
            "disable_host_sanitize": false,
            "is_collection": true,
            "target": ""
          }
        ]
      },
      {
        "endpoint": "/api/v1/events",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/events",
            "encoding": "json",
            "sd": "static",
            "method": "POST",
            "host": [
              "http://localhost:30036"
            ],
            "disable_host_sanitize": false,
            "is_collection": true,
            "target": ""
          }
        ]
      },
      {
        "endpoint": "/api/v1/events/{eventId}",
        "method": "DELETE",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/events/{eventId}",
            "encoding": "json",
            "sd": "static",
            "method": "DELETE",
            "host": [
              "http://localhost:30036"
            ],
            "disable_host_sanitize": false,
            "is_collection": true,
            "target": ""
          }
        ]
      },
      {
        "endpoint": "/api/v1/events/{eventId}",
        "method": "PUT",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/events/{eventId}",
            "encoding": "json",
            "sd": "static",
            "method": "PUT",
            "host": [
              "http://localhost:30036"
            ],
            "disable_host_sanitize": false,
            "is_collection": true,
            "target": ""
          }
        ]
      }
    ]
  }